{
    "include": [
        "./src/**/*.ts"
    ],
    "outDir": "./release",
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "baseUrl": "src",
        "skipLibCheck": true,
        "lib": [
            "dom"
        ]
    }
}